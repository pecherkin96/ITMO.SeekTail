@model IEnumerable<ITMO.SeekTail.Models.Shelter>

@{
    ViewBag.Title = "Список приютов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">@Html.DisplayNameFor(model => model.Image)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.Location)</th>
                    <th class="text-center">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                 {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Image" alt="@item.Name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td class="d-flex justify-content-center align-items-center">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Изменить </a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Подробнее </a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Удалить </a>
                        </td>
                    </tr>
                 }
            </tbody>

        </table>

    </div>
</div>

